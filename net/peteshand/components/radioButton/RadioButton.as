package circul8.components.radioButton{	import flash.display.MovieClip;		import flash.events.Event;	import flash.events.MouseEvent;	import circul8.data.DataProvider;		import flash.text.TextField;    import flash.text.TextFormat;    import flash.text.TextFieldAutoSize;	import flash.text.TextFormatAlign;		import com.gskinner.motion.GTween;	import gs.easing.*;		public class RadioButton extends MovieClip	{		private var radius:int = 8;		private var Selected:Boolean = false;		private var rbBackground:MovieClip;		private var rbSelection:MovieClip;		private var btn:MovieClip;		private var fadeTween:GTween;				public function RadioButton():void		{			rbBackground = new MovieClip();			rbBackground.graphics.lineStyle(2,0xAFAFAD,1);			rbBackground.graphics.beginFill(0xFEFEFE);			rbBackground.graphics.drawCircle(0,0,radius);			rbBackground.graphics.endFill();			addChild(rbBackground);						rbSelection = new MovieClip();			rbSelection.graphics.beginFill(0xbc010a);			rbSelection.graphics.drawCircle(0,0,radius-2);			rbSelection.graphics.endFill();			addChild(rbSelection);			rbSelection.alpha = 0;			rbSelection.visible = false;						btn = new MovieClip();			btn.graphics.beginFill(0xFF0000, 0);			btn.graphics.drawRect(-radius,-radius,radius*2,radius*2);			btn.graphics.endFill();			addChild(btn);			btn.buttonMode =  true;						btn.addEventListener(MouseEvent.CLICK, clickThis);		}		private function clickThis(event:MouseEvent):void		{			selected = true;		}		public function toggle():void		{			if (Selected) selected = false;			else selected = true;		}		public function set selected(v:Boolean):void		{			if (Selected != v){				Selected = v				if (v) {					//gotoAndPlay("In");					dispatchEvent(new Event(Event.SELECT));				}				//else gotoAndPlay("Out");				Fade();			}		}		public function get selected():Boolean		{			return Selected;		}		private function Fade():void		{			if (Selected){				rbSelection.visible = true;				fadeTween = new GTween(rbSelection, 0.5, {alpha:1}, {ease:Strong.easeInOut, delay:0});			}			else {				fadeTween = new GTween(rbSelection, 0.5, {alpha:0}, {ease:Strong.easeInOut, delay:0});				fadeTween.addEventListener(Event.COMPLETE,  FadeOutComplete);				function FadeOutComplete(event:Event):void				{					fadeTween.removeEventListener(Event.COMPLETE, FadeOutComplete);					rbSelection.visible = false;				}			}		}	}}