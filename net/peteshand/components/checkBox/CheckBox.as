package circul8.components.checkBox{	import flash.display.MovieClip;		import flash.events.Event;	import flash.events.MouseEvent;	import circul8.data.DataProvider;		import flash.text.TextField;    import flash.text.TextFormat;    import flash.text.TextFieldAutoSize;	import flash.text.TextFormatAlign;		import com.gskinner.motion.GTween;	import gs.easing.*;		public class CheckBox extends MovieClip	{		private var Selected:Boolean = false;				public function CheckBox():void		{			addFrameScript(0, stopFrame);			addFrameScript(4, stopFrame);			btn.addEventListener(MouseEvent.CLICK, clickThis);		}		private function stopFrame():void		{			stop();		}		public function init():void		{					}		private function clickThis(event:MouseEvent):void		{			toggle();		}		public function toggle():void		{			if (Selected) selected = false;			else selected = true;		}		public function set selected(v:Boolean):void		{			if (Selected != v){				Selected = v				if (v) gotoAndPlay("In");				else gotoAndPlay("Out");			}			mc_checkBoxBg.alpha = 0;			dispatchEvent(new Event(Event.CHANGE));		}		public function get selected():Boolean		{			return Selected;		}	}}